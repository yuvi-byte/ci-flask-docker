pipeline {
    agent any
    stages {
        stage('Clone') {
            steps {
                git 'https://github.com/yuvi-byte/ci-flask-docker.git'
            }
        }
        stage('Build Docker') {
            steps {
                script {
                    docker.build('flask-cicd-image')
                }
            }
        }
        stage('Run Container') {
            steps {
                sh 'docker run -d -p 5000:5000 flask-cicd-image'
            }
        }
    }
}
